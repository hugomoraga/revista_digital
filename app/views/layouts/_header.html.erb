<header>

    <div style="background-color: #677740; height: 250px">
        <div class="row d-flex">
            <div class="col-md-2">
                <div class="logo-brand p-3">
                        <img src="<%= image_url('logo.png') %>" style="height:180px;"">
                </div>   
            </div>
            <div class="col-md-4">
                <div class="p-5">
                    <div class="display-4">
                        <h2 class="text-uppercase text-primary fw-normal">Revista Digital</h2>
                    </div>
                    <div class="display-4">
                        <h2 class="text-uppercase text-white fw-bold">Arma y Servicios</h2>
                    </div>
                </div>
               
            </div>
            <div class="col-md-6">
                <div class="row d-flex justify-content-end">
                    <div class="col-md-8">
                        <div class="w-75 pt-3 position-relative">
                               <%= render "layouts/search_form" %>

                        </div>
                    </div>
                        
                        
                    <div class="col-md-4 pb-5 pt-4">
                        <img src="<%= image_url('ejercito-logo.png') %>" style="height:130px;"">
                    </div>
                </div>
                <div class="row d-flex">

                    <div class="col-md-6 offset-md-4 d-flex justify-content-center position-relative">
                        <div class="fs-3 text-end text-white fw-bold text-uppercase p-2 mb-3  px-5" style="background-color: #c9a22a;">
                             <a  class="text-decoration-none text-white" href="/historico">Archivo Historico</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <nav class="navbar navbar-expand-lg navbar-light bg-secondary"">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu-principal" aria-controls="menu-principal" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="menu-principal">
            <ul class=" fs-4 d-block p-2 container justify-content-around">
                <% menus.each do |menu| %>
                    <%  if menu.category != 'OpiniÃ³n' %>    
                        <li class="text-uppercase d-inline-flex align-items-center justify-content-end "> <%= link_to menu.category, category_path(menu), :class => 'text-decoration-none nav-link text-primary' %> <span class="pb-2 fw-bold">/</span> </li>
                    <% end %>

                <% end %>
            </ul>
        </div>
    </nav>
</header>

