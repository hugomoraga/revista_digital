<div class="row">
    <% @posts.take(3).each do |post| %>
        <div class="col-md-6 post-featured p-3">
        <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
            <div class="card mb-3 post-featured-card rounded-0 border-0 shadow-sm">
                <% if post.header_image.present? %>
                    <div class="header-image" style="background-image: url(<%= url_for(post.header_image) %>)">
                        <div class="card-body  d-flex  flex-column p-2">
                            <p class="fs-5">
                                <% if post.category.present? %>
                                    <%= post.category.category %>
                                    <% else %>
                                    <p>SIN CATEGORIA</p>
                                <% end %>
                            </p>
                    
                            <p class='text-secondary mb-0 fs-4 mt-auto'><%= truncate(post.description, length: 30) %></p>

                            <h5 class='card-title text-dark fs-3 fw-bold'><%= post.title %>  </h5>
                        
                        </div>
                    </div>
                <% else %>
                    <div class="p-4"> SIN IMAGEN</div>
                <% end %>

                
            </div>
        <% end %>
        
        </div>
        
    <% end %>
</div>

<script>
var featuredpost = document.getElementsByClassName('post-featured');
var firstfeaturedpost = featuredpost[0];
firstfeaturedpost.classList.remove("col-md-6");
firstfeaturedpost.classList.add("col-12");

</script>