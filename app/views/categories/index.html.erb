<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Categorias</h1>

<table class="table table-striped ">
  <thead>
    <tr>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category %></td>
        <td><%= link_to 'Mostrar', category, class: 'btn btn-primary text-decoration-none text-white rounded-pill' %></td>
        <td><%= link_to 'Editar', edit_category_path(category), class: 'btn btn-warning text-decoration-none text-white rounded-pill' %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoria', new_category_path %>

</div>
